{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "libs/**/bin/Release/**.dll"
          ],
          "exclude": [
            "**/obj/**",
            "_site/**",
            "**/Tests/**",
            "**/Test/**",
            "Test**/**",
            "**/**.Test*",
            "nanoFramework.IoT.Device/**",
            "**/TestAdapter/**",
            "**/poc/TestOfTestFrameworkByReference/**"
          ]
        }
      ],
      "filter": "api-filter.yml",
      "dest": "api",
      "disableGitFeatures": true
    },
    {
      "src": [
        {
          "files": [
            "nanoFramework.IoT.Device/**/bin/Release/**.dll"
          ],
          "exclude": [
            "**/obj/**",
            "_site/**",
            "**/Tests/**",
            "**/Test/**",
            "**/**.Test*",
            "**/samples/**",
            "libs/**"
          ]
        }
      ],
      "filter": "api-filter-iot.yml",
      "dest": "devices",
      "disableGitFeatures": true
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md",
          "devices/**.yml",
          "devices/index.md",
          "devicesdetails/**.md",
          "devicesdetails/**/**.md",
          "devicesdetails/**.yml",
          "x-cross/**.yml"
        ]
      },
      {
        "files": [
          "content/**.md",
          "content/**/toc.yml",
          "toc.yml",
          "*.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**",
          "README.md",
          "LICENSE",
          "LICENSE-CODE"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "devicesimages/**"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "_site",
    "markdownEngineName": "markdig",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "templates/nano"
    ],    
    "postProcessors": [ "ExtractSearchIndex" ],
    "xrefService": [ "https://xref.docs.microsoft.com/query?uid={uid}" ],
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false,
    "globalMetadata": {
      "_appTitle": ".NET nanoFramework Documentation",
      "_enableSearch": true,
      "_gitContribute": {
        "branch": "pages-source"
      }
    }
  }
}


