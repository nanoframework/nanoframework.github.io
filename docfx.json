{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "**/*.csproj"
          ],
          "exclude": [
            "**/obj/**",
            "_site/**",
            "**/Tests/**",
            "**/Test/**",
            "**/**.Test*",
            "nanoFramework.IoT.Device/**"
          ]
        }
      ],
      "filter": "api-filter.yml",
      "dest": "api",
      "disableGitFeatures": false
    },
    {
      "src": [
        {
          "files": [
            "**/*.csproj"
          ],
          "exclude": [
            "**/obj/**",
            "_site/**",
            "**/Tests/**",
            "**/Test/**",
            "**/**.Test*",
            "**/samples/**"
          ]
        }
      ],
      "filter": "api-filter.yml",
      "dest": "devices",
      "disableGitFeatures": false
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md",
          "devices/**.yml",
          "devices/index.md"
        ]
      },
      {
        "files": [
          "content/**.md",
          "content/**/toc.yml",
          "toc.yml",
          "*.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**",
          "README.md",
          "LICENSE",
          "LICENSE-CODE"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "_site",
    "markdownEngineName": "markdig",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "nano1",
      "templates/nano1"
    ],    
    "postProcessors": [ "ExtractSearchIndex" ],
    "xrefService": [ "https://xref.docs.microsoft.com/query?uid={uid}" ],
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false,
    "globalMetadata": {
      "_appTitle": "nanoFramework Documentation",
      "_enableSearch": true,
      "_gitContribute": {
        "branch": "pages-source"
      }
    }
  }
}


